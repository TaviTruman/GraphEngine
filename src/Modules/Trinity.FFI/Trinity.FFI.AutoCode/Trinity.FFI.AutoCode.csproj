    </None>
    <None Update="FFIMethods.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>FFIMethods.cs</LastGenOutput>
    </None>
    <None Update="Native.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
